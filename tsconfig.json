{
  "compilerOptions": {
    "lib": ["ES2017", "DOM"],
    "target": "ES2015",
    "module": "CommonJS",
    "esModuleInterop": true,
    "importHelpers": true,
    "allowJs": true,

    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "downlevelIteration": true,
    "removeComments": true,
    "sourceMap": true,
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
  ],
}
